{
  "version": 2,
  "rewrites": [
    {
      "source": "/socket.io/(.*)",
      "destination": "/api/socket"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*).js",
      "destination": "/api/index?file=$1.js"
    },
    {
      "source": "/(.*).css",
      "destination": "/api/index?file=$1.css"
    },
    {
      "source": "/(.*).html",
      "destination": "/api/index?file=$1.html"
    },
    {
      "source": "/(.*).svg",
      "destination": "/api/index?file=$1.svg"
    },
    {
      "source": "/(.*).gif",
      "destination": "/api/index?file=$1.gif"
    },
    {
      "source": "/(.*).png",
      "destination": "/api/index?file=$1.png"
    },
    {
      "source": "/(.*).jpg",
      "destination": "/api/index?file=$1.jpg"
    },
    {
      "source": "/(.*).ico",
      "destination": "/api/index?file=$1.ico"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-Requested-With, Content-Type, Accept, Origin, Authorization"
        }
      ]
    }
  ]
}
